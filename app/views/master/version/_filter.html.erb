<%= search_form_for @q, url: master_version_index_path do |f| %>
  <div class="row align-items-center p-2 g-3">
    <div class="col-md-1">
      <%= f.label Master::Version.human_attribute_name(:name), class: "col-form-label" %>
    </div>
    <div class="col-md-2">
      <%= f.search_field :name_cont, class: 'form-control' %>
    </div>
  </div>
  <div class="row align-items-center p-2 g-3">
    <div class="col-md-1">
      <%= f.label Master::Version.human_attribute_name(:middle_id), class: "col-form-label" %>
    </div>
    <div class="col-md-2">
      <%= f.collection_select :middle_id_eq, Master::Middle.all, :id, :name, { include_blank: true }, class: 'form-control form-select' %>
    </div>
  </div>
  <div class="row p-2">
    <div class="col-md-1 p-1">
      <%= f.submit t("common.search.submit"), class: 'btn btn-primary' %>
    </div>
    <div class="col-md-2 p-1">
      <%= link_to t("common.search.clear"), master_version_index_path, class: 'btn btn-secondary' %>
    </div>
  </div>
<% end %>